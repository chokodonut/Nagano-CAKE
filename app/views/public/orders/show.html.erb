<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>注文情報</h3>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @orders.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @orders.postal_code%>
           <%= @orders.address %>
           <%= @orders.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @orders.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3 offset-1">
      <h3>請求情報</h3>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @orders.total_payment - @orders.shipping_cost %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @orders.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @orders.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <h3>注文内容</h3>
    <table class="table">
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      <% @orders.order_details.each do |order_detail| %>
      </tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.with_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <% subtotal=order_detail.item.with_tax_price * order_detail.amount %>
        <td><%= subtotal %></td>
      <% end %>
    </table>
  </div>
</div>