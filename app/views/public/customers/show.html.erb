<lable>登録情報を編集する</lable>

<div class="container">
  <div class="row">
    <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success btn-sm" %>
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
            <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
            <td>
              <%= @customer.last_name %>
              <%= @customer.first_name %>
            </td>
        </tr>
        <tr>
          <th>フリガナ</th>
            <td>
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </td>
        </tr>
        <tr>
          <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    <lable>配送先</lable>
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-info btn-sm" %>

    <lable>注文履歴</lable>
      <%= link_to "一覧を見る", orders_index_path, class: "btn btn-info btn-sm" %>
  </div>
</div>

