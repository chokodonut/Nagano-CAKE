<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<table class="table">
  <div class="field">
      <label>名前</label>
      <%= f.label :"(姓)" %><br>
      <%= f.text_field :last_name %>
    </div>

  <div class="field">
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <label>フリガナ</label>
      <%= f.label :"(セイ)" %><br>
      <%= f.text_field :last_name_kana %>
    </div>

    <div class="field">
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="field">
      <%= f.label :"住所" %>
      <%= f.text_area :address %>
    </div>

    <div class="field">
      <%= f.label :"電話番号(ハイフンなし)" %>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="actions">
      <%= f.submit "編集内容を保存する" %>
    </div>
    <%= link_to "退会する", unsubscribe_path %>
</table>
<% end %>