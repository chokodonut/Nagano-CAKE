<div class="container">
  <% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <h1>会員情報編集</h1>

  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

    <div class="md-3">
        <label>名前</label>
        <%= f.label :"(姓)", class: "form-label" %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

    <div class="md-3">
        <%= f.label :"(名)", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="md-3">
        <label>フリガナ</label>
        <%= f.label :"(セイ)", class: "form-label" %><br>
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>

      <div class="md-3">
        <%= f.label :"(メイ)", class: "form-label" %>
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>

      <div class="md-3">
        <%= f.label :"メールアドレス", class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="md-3">
        <%= f.label :"郵便番号(ハイフンなし)", class: "form-label" %>
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>

      <div class="md-3">
        <%= f.label :"住所", class: "form-label" %>
        <%= f.text_area :address, class: "form-control" %>
      </div>

      <div class="md-3">
        <%= f.label :"電話番号(ハイフンなし)", class: "form-label" %>
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
      </div>
      <%= link_to "退会する", unsubscribe_path %>

  <% end %>
</div>