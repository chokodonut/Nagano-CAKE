<h1>配送先登録</h1>
<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">郵便番号（ハイフンなし）</label>
    <div class="col-sm-10">
      <div>
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">住所</label>
      <div class="col-sm-10">
        <div>
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
    </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">宛名</label>
      <div class="col-sm-10">
        <div>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    </div>
</div>
<% end %>