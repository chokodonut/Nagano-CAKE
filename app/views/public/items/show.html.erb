<div class="container">
  <div class="row">
    <div class="col-md-2">
      <% @genre.each do |genre| %>
      <div class="border border-1">
        <%= genre.name %>
      </div>
      <% end %>
    </div>
    <div class="col-md-3">
      <%= image_tag @item.item_image(250,250) %>
    </div>
    <div class="col-md-5">
      <%= @item.name %>
      <%= @item.introduction %>
      <%= @item.price %>
      <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f|%>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.select :amount, *[1..5] %>
      <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>