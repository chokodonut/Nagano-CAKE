
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <label>ジャンル検索</label>
      <% @genre.each do |genre| %>
      <div class="border border-1">
        <%= genre.name %>
      </div>
      <% end %>
    </div>
    <div class="col-md-10">
      <h1>商品一覧</h1>
      <div class="container">
        <div class="row">
          <% @items.each do |item| %>
          <div class="col-md-3", style="margin-rigth: 2px; margin-bottom: 2px;">
            <div class="card-img-top">
              <%= link_to item_path(item.id) do %>
              <%= image_tag item.item_image(200,200) %>
              <% end %>
                <div class="card-body">
                  <div class="card-text">
                    <%= item.name %>
                  </div>
                  <div class="card-text">
                    <%= item.price %>円
                  </div>
                </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= paginate @items %>