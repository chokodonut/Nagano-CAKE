<div>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
</div>
<% @cart_items.each do |cart_item| %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
        <tr>
          <td>
            <%= cart_item.item.name %>
          </td>

          <td><%= cart_item.item.with_tax_price %></td>

          <td>
            <%= cart_item.amount %>
          </td>
          <td><%= cart_item.subtotal %></td>
              <% @total += cart_item.subtotal %></td>
          <td>
            <div>
              <%= link_to '削除する', cart_items_path(cart_item.id), method: :delete, "data-confirm" => "削除しますか？", class: 'btn btn-danger' %>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% end %>