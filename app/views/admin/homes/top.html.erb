<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
    <table class="table">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>


      <% @orders.each do |order| %>
      　<tr>
         <td><%= link_to order.created_at, admin_admin_order_path(order.id) %></td>
         <td><%= order.name %></td>
         <td><% @amount = 0 %>
           <% order.order_details.each do |order_detail| %>
          <% @amount += order_detail.amount %>
          <% end %>
          <%= @amount %>
          </td>
        </tr>
        <% end %>
    </table>
  </div>
</div>
<%= paginate @orders %>