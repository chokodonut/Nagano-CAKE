<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
    <table class="table">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at, admin_admin_order_path(order.id) %></td>
        <td><%= order.name %></td>
        <% order.order_details.each do |order_detail| %>
        <td><%= order_detail.amount %></td>
      </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
<%= paginate @orders %>