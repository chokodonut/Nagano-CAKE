<div class="container">
  <div class="row">
    <h1>会員一覧</h1>
    <table class="table">
      <tr>
        <th> 会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
      <% @customer.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to customer.full_name, admin_customer_path(customer.id) %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == false %>
            <label>有効</label>
          <% else %>
            <label>退会</label>
          <% end %>
        </td>
      </tr>
    <% end %>
    </table>

  </div>
</div>
<%= paginate @customer %>