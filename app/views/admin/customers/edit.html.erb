<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>


  <div class="field">
    <label>氏名</label>
    <%= f.text_field :last_name %>
  </div>

　<div class="field">
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>

  <div class="field">
    <%= f.label :"会員ステータス" %>
    <%= f.radio_button :is_deleted, "true" %>
    <%= f.label :is_deleted, "退会", value: true %>

    <%= f.radio_button :is_deleted, "false" %>
    <%= f.label :is_deleted, "有効", value: false %>
  </div>
<% end %>

