<h1>商品新規登録</h1>

<%= form_with model: @item, url: adomin_items_path do |f| %>
  <label>画像</label>
  <%= f.file_field :image, accept: "image/*" %>
  
  <label>商品名</label>
  <%= f.text_field :name %>
  
  <label>商品説明文</label>
  <%= f.text_area :introduction %>
  
  <label>ジャンル</label>
  
  <%= f.submit "新規登録" %>
  