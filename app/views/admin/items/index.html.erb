<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
    <table class="table">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == false %>
            <label>販売停止中</label>
          <% else %>
            <label>販売中</label>
          <% end %>
      <% end %>
        </td>
      </tr>
    </table>

  </div>
</div>
<%= paginate @items %>
