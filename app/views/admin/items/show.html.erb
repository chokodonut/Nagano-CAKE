<h1>商品詳細</h1>

<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image', size: "200x200" %>
<% end %>
<table>
  <tr>
    <th>商品名</th>
      <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
      <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
      <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格<br>(税抜価格)</th>
      <td><%= @item.price %></td>
  </tr>
  <%= form_with model: @item, url: admin_items_path do |f| %>
  <tr>
    <th>販売ステータス</th>
      <td>
        <% if @item.is_active == false %>
        <label>販売停止中</label>
        <% else %>
        <label>販売中</label>
        <% end %>
      </td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-sm" %>
<% end %>
