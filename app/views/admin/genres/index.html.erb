<h1>ジャンル一覧　追加</h1>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>

  <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>
<% @genres.each do |genre| %>
<div class="customer">
  <div class="row">
    <div class="col-lg-8">
      <table class="table">
        <tr>
          <th>
            <%= genre.name %>
          </th>
    </div>
  </div>
</div>
<div class="col-lg-4 offset-lg-1">
  <td>
    <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
  </td>
</div>
<% end %>