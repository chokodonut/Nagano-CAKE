<div class="container">
  <div class="row">
    <div class="col-md-8 offset-3">
      <h3>ジャンル編集</h3>
      <%= form_with model: @genre, url: admin_genre_path(@genre.id),method: :patch do |f| %>
      <label>ジャンル名</label>
      <%= f.text_field :name %>
      <%= f.submit "変更する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
